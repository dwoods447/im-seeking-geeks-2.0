{
    "compilerOptions": {
        "module": "ESNext",
        "esModuleInterop": true,
        "target": "ESNext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "./server/dist",
        "rootDir": "./server",
        "baseUrl": ".",
        "paths": {
            "*": [
                "../server/*"
            ]
        },
        "lib": [
            "ES2017"
        ]
    },
    "include": [
        "./server/**/*"
    ],
    "exclude": ["node_modules"]
}