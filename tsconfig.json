{
    "compilerOptions": {
        "module": "es6",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "server/dist/",
        "rootDir": "server/",
        "baseUrl": ".",
        "paths": {
            "*": [
                "server/types/*"
            ]
        },
        "lib": [
            "ES2017"
        ]
    },
    "include": [
        "./server/**/*"
    ],
    "exclude": ["node_modules"]
}