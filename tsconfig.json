{
    "compilerOptions": {
        "module": "ES2020",
        "esModuleInterop": true,
        "target": "ES2020",
        "noImplicitAny": true,
        "moduleResolution": "node16",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "./server/dist",
        "rootDir": "./server/",
        "baseUrl": ".",
        "paths": {
            "*": [
                "./server/*"
            ]
        },
        "lib": [
            "es6"
        ]
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
    },
    "include": [
        "./server/**/*"
    ],
    "exclude": ["node_modules"]
}