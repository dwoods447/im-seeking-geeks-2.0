{
    "compilerOptions": {
        "module": "ES2020",
        "esModuleInterop": true,
        "target": "ES2020",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "./server/dist",
        "rootDir": "./server/",
        "baseUrl": ".",
        "paths": {
            // "*": [
            //     "./server/*"
            // ]
            "*": ["./server/*"]
        },
        "lib": ["es6", "ES2020"]
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "include": ["./server/**/*", "./server/__tests__/**/*"],
    "exclude": ["node_modules"]
}
