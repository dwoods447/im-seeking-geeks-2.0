{
    "compilerOptions": {
        "module": "ES2020",
        "esModuleInterop": true,
        "target": "ESNext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./server/dist/",
        "rootDir": "./server/",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "./server/types/*"
            ]
        },
        "lib": [
            "es2015"
        ]
    },
    "include": [
        "./server/**/*"
    ]
}